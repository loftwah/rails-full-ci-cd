<h1>Loftwah's LinkFree Clone</h1>
<!-- Check if the user is logged in -->
<% if user_signed_in? %>
  <h2>Hi there! This is a simple clone of LinkFree in Rails for demo purposes.</h2>
  <p>Welcome back, <%= current_user.email %>!</p>
  <%= link_to 'Edit profile', edit_user_registration_path %>
  <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
<% else %>
<h2>You are not signed in</h2>
  <%= link_to "Sign in", new_user_session_path %>
  <%= link_to "Sign up", new_user_registration_path %>
  <%= link_to "Sign in with GitHub", user_github_omniauth_authorize_path, method: :post %>
<% end %>
